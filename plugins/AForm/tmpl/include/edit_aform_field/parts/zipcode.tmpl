<div class="view-block">
	<div class="aform-input-example parts-%%field_idx%%">%%field_input_example%%</div>
	<input id="parts-%%field_idx%%" class="aform-input aform-zipcode aform-field-preview parts-%%field_idx%% hankaku validate-zipcode require-hyphen" name="aform-field-%%field_idx%%" type="text" value="%%field_default_text%%" size="40">
</div>

<mt:include name="include/edit_aform_field/parts_common.tmpl"
	display_label="1"
	display_parts_id="1"
	display_required="1"
	display_input_example="1"
	display_require_hyphen="1"
	display_default="1">

<div class="form-group">
	<label for="exampleInputEditableURL" class="mr-sm-3 ttl"><__trans phrase="Complement address input"></label>
	<select id="aformFieldUseAjaxzip%%field_idx%%" class="custom-select form-control aform-field-use-ajaxzip">
		<option value="0"><__trans phrase="Do not use"></option>
		<option value="4"><__trans phrase="Use(4fields: prefecture + city + area + street)"></option>
		<option value="3"><__trans phrase="Use(3fields: prefecture + city + street)"></option>
		<option value="2"><__trans phrase="Use(2fields: prefecture + city)"></option>
	</select>
	<div class="row mt-3" id="aformFieldSettingAjaxzip-%%field_idx%%">
		<div class="form-group col" id="aformFieldSettingAjaxzipPrefecture-%%field_idx%%">
			<label for=""><__trans phrase="Prefecture Parts ID"></label>
			<input type="text" class="form-control aform-field-ajaxzip-prefecture-parts-id" id="aformFieldAjaxzipPrefecturePartsId%%field_idx%%">
		</div>
		<div class="form-group col" id="aformFieldSettingAjaxzipCity-%%field_idx%%">
			<label for=""><__trans phrase="City Parts ID"></label>
			<input type="text" class="form-control aform-field-ajaxzip-city-parts-id" id="aformFieldAjaxzipCityPartsId%%field_idx%%">
		</div>
		<div class="form-group col" id="aformFieldSettingAjaxzipArea-%%field_idx%%">
			<label for=""><__trans phrase="Area Parts ID"></label>
			<input type="text" class="form-control aform-field-ajaxzip-area-parts-id" id="aformFieldAjaxzipAreaPartsId%%field_idx%%">
		</div>
		<div class="form-group col" id="aformFieldSettingAjaxzipStreet-%%field_idx%%">
			<label for=""><__trans phrase="Street Parts ID"></label>
			<input type="text" class="form-control aform-field-ajaxzip-street-parts-id" id="aformFieldAjaxzipStreetPartsId%%field_idx%%">
		</div>
	</div>
</div>
