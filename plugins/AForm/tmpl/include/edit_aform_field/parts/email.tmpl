	<label for="aformFieldEmailIsReplyed%%field_idx%%"><__trans phrase="is replyed to customer"></label>
</div>

<div class="form-group">
	<label for="aformFieldRequireTwice%%field_idx%%"><__trans phrase="require twice to confirmation"></label>
	<input type="checkbox" class="mt-switch form-control aform-field-require-twice" id="aformFieldRequireTwice%%field_idx%%" value="1">
	<label for="aformFieldRequireTwice%%field_idx%%"><__trans phrase="require twice to confirmation"></label>
</div>
